<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="upv_view" model="ir.ui.view">
        <field name="name">ndt.upv.form</field>
        <field name="model">ndt.upv</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id"/>
                        <field name="sample_id"  readonly="1"/>
                        <field name="parameter_id" />
                        <field name="eln_ref"  readonly="1"/>
                        
                    </group>
                     <group style="width:50%">
                        <field name="structure_age" string="Structure Age" identity="extra"/>
                        <field name="site_temp"  string="Site Temperature" identity="extra"/>
                    </group>
                    <group style="width:50%">
                        <field name="grade_id"  string="Grade Id" identity="extra"/>
                        <field name="instrument"  string="Instrument" identity="extra"/>
                    </group>

                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name="element_type" string="Element Type/Member Name" />
                                <field name="level_id" string="Location" />
                                <field name="dist" string="Dist. (mm)" />
                                <field name="time" string="Time. (Î¼s)" />
                                <field name="velocity" string="Velocity(km/sec)" />
                                <field name="condition_concrete" string="Condition Of Concrete" />
                                <field name="surface" string="Surface" />
                                <field name="quality" string="Quality" />
                                <field name="method" string="Method" />
                            </tree>
                    </field>
                    <group>
                        <field name="average" string="Average" identity="result"/>
                        <field name="min" string="Min Value" identity="result" />
                        <field name="max" string="Max Value" identity="result"/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>