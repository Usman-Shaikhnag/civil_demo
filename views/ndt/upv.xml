<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="upv_view" model="ir.ui.view">
        <field name="name">ndt.upv.form</field>
        <field name="model">ndt.upv</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id" invisible="1"/>
                    </group>
                     <group style="width:50%">
                        <field name="structure_age"/>
                        <field name="site_temp"/>
                    </group>
                    <group style="width:50%">
                        <field name="concrete_grade"/>
                        <field name="instrument"/>
                    </group>

                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name="element_type" />
                                <field name="level_id" />
                                <field name="dist" />
                                <field name="time" />
                                <field name="velocity" />
                                <field name="condition_concrete" />
                                <field name="surface" />
                                <field name="quality" />
                                <field name="method" />
                            </tree>
                    </field>
                    <group>
                        <field name="average" />
                        <field name="min"  />
                        <field name="max"/>
                    </group>
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>