<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="cover_meter_view" model="ir.ui.view">
        <field name="name">ndt.cover.meter.form</field>
        <field name="model">ndt.cover.meter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id"  readonly="1"/>
                        <field name="parameter_id"/>
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name="member" string="Member"/>
                                <field name="location" string="Location"/>
                                <!-- <field name="level" /> -->
                                <field name="cover" string="Cover"/>
                            </tree>
                    </field>
                    <group>
                            <field name="average" string="Average" identity="result"/> 
                            <field name="average_min" string="Average Min" identity="result"/>         
                            <field name="average_max" string="Average Max" identity="result"/>                      
                    </group>
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>