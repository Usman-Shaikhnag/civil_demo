<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="rock_information_view" model="ir.ui.view">
        <field name="name">mechanical.rock.form</field>
        <field name="model">mechanical.rock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id"/>
                       
                    </group>
                    <group>
                      <field name="sample_parameters">
                        <tree>
                          <field name="parameter_name"/>
                          <field name="test_method"/>
                        </tree>
                      </field>
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name='sr_no'/>
                                <!-- <field name='location'/> -->
                                <!-- <field name='sample_no'/> -->
                                <field name='depth'/>
                                <field name='ssd_weight'/>
                                <field name='wt_sample_water'/>
                                <field name='oven_dry_wt'/>
                                <field name='porosity'/>
                                <field name='water_absorption'/>
                                <field name='dry_density'/>
                                <field name='saturated_spc_gravity'/>
                            </tree>
                           
                          </field> 
                            <group>
                               <field name='avg_porosity'/>
                            </group>
                            <group>
                               <field name='avg_water_absorption'/>
                            </group>  
                            <group>
                               <field name='avg_dry_density'/>
                            </group>
                            <group>
                               <field name='avg_saturated_spc_gravity'/>
                            </group>



                    <!-- USC -->
                    <group attrs="{'invisible': [('usc_visible', '=', False)]}">
                        <h1>
                            <field name="usc_name1" readonly="1" nolabel="1"/>
                            <field name="usc_visible" invisible="1"/>
                        </h1>
                    </group>

                    <group attrs="{'invisible': [('usc_visible', '=', False)]}">
                        <field name="child_lines1" nolabel="1" >
                            <tree editable="bottom">
                                <field name='location'/>
                                <field name='sr_no'/>
                                <field name='depth'/>
                                <field name='diameter'/>
                                <field name='length'/>
                                <field name='ld_ratio'/>
                                <field name='area'/>
                                <field name='load'/>
                                <field name='usc'/>
                                
                            </tree>
                           
                         </field> 
                           
                       
                    </group>

                    <group attrs="{'invisible': [('usc_visible', '=', False)]}">
                        <field name='avg_usc' col="4"/>
                    </group>
                    
                     
                </sheet>
            </form>
        </field>
    </record>
   


    </data>
</odoo>