                                </group>
                            </group>
                            <group>
                                <group style="width:25%">
                                <field name='ult_tens_strgth'/>
                                </group>
                                <group style="width:25%">
                                <field name='requirement_utl'/>
                                </group>
                                <group style="width:25%">
