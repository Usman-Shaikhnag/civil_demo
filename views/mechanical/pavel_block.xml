<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_pavel_block_view" model="ir.ui.view">
        <field name="name">mechanical.pavel.block.form</field>
        <field name="model">mechanical.pavel.block</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id"/>
                        <field name="average_tensile"/>
                       
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" >
                            <tree editable="bottom">
                                <field name='length' string='Mean of failure Length in mm (l)' invisible="1"/>
                                <field name='thickness' string='Mean of failure Thickness in mm (t)'/>
                                <field name='area' string='Area of Failure = l x t in mm2'/>
                                <field name='failure_load' string='Failure Load in N'/>
                                <field name='splitting_tensile' string='Tensile Splitting Strength in N/mm2'/>
                                <!-- <field name='average_tensile'/> -->
                            </tree>
                    </field> 
                     
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>