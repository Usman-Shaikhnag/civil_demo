<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_cement_normalconsistency" model="ir.ui.view">
        <field name="name">mechanical.cement.normalconsistency.form</field>
        <field name="model">mechanical.cement.normalconsistency</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id" invisible="1"/>
                    </group>
                    <!-- Normal Consistency Start -->
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <group>
                            <field name="temp_percent"/>
                            <field name="humidity_percent"/> 
                            <field name="tests" widget="many2many_tags" options="{'no_create':True,'no_open': True}"/>
                    </group>
                    <group>
                        <label for="wt_of_cement_trial1" string="Wt. of Cement(g)" />
                        <div class="address_format " >
                          <group colspan="1"  class="oe_inline">
                            <label for="wt_of_cement_trial1" string="Trial 1" />
                            <field  name="wt_of_cement_trial1"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline"  >
                            <label for="wt_of_cement_trial2" string="Trial 2" />
                            <field  name="wt_of_cement_trial2"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline">
                            <label for="wt_of_cement_trial3" string="Trial 3" />
                            <field  name="wt_of_cement_trial3" colspan="3" nolabel="1"/>
                          </group>
                          <!--<field  name="wt_of_cement_trial2" style="width: 33%"/>-->
                          <!--<field  name="wt_of_cement_trial3" style="width: 33%"/>-->
                        </div>
                    </group>
                    <group>
                        <label for="wt_of_water_req_trial1" string="Wt.of water required (g)" />
                        <div class="address_format " >
                          <group colspan="1"  class="oe_inline">
                            <label for="wt_of_water_req_trial1" string="" />
                            <field  name="wt_of_water_req_trial1"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline"  >
                            <label for="wt_of_water_req_trial2" string="" />
                            <field  name="wt_of_water_req_trial2"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline">
                            <label for="wt_of_water_req_trial3" string="" />
                            <field  name="wt_of_water_req_trial3" colspan="3" nolabel="1"/>
                          </group>
                          <!--<field  name="wt_of_cement_trial2" style="width: 33%"/>-->
                          <!--<field  name="wt_of_cement_trial3" style="width: 33%"/>-->
                        </div>
                    </group>
                    <group>
                        <label for="penetration_of_vicat_plunger_trial1" string="Penetraion of vicat's Plunger (mm)" />
                        <div class="address_format " >
                          <group colspan="1"  class="oe_inline">
                            <label for="penetration_of_vicat_plunger_trial1" string="" />
                            <field  name="penetration_of_vicat_plunger_trial1"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline"  >
                            <label for="penetration_of_vicat_plunger_trial2" string="" />
                            <field  name="penetration_of_vicat_plunger_trial2"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline">
                            <label for="penetration_of_vicat_plunger_trial3" string="" />
                            <field  name="penetration_of_vicat_plunger_trial3" colspan="3" nolabel="1"/>
                          </group>
                          <!--<field  name="wt_of_cement_trial2" style="width: 33%"/>-->
                          <!--<field  name="wt_of_cement_trial3" style="width: 33%"/>-->
                        </div>
                    </group>
                    <group>
                        <label for="normal_consistency_trial1" string="Normal Consistency (%)" />
                        <div class="address_format " >
                          <group colspan="1"  class="oe_inline">
                            <label for="normal_consistency_trial1" string="" />
                            <field  name="normal_consistency_trial1"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline"  >
                            <label for="normal_consistency_trial2" string="" />
                            <field  name="normal_consistency_trial2"  colspan="3"  nolabel="1"/>
                          </group>
                          <group colspan="1" class="oe_inline">
                            <label for="normal_consistency_trial3" string="" />
                            <field  name="normal_consistency_trial3" colspan="3" nolabel="1"/>
                          </group>
                          <!--<field  name="wt_of_cement_trial2" style="width: 33%"/>-->
                          <!--<field  name="wt_of_cement_trial3" style="width: 33%"/>-->
                        </div>
                    </group>
                    <!-- Normal Consistency End -->

                    <!-- Setting Time Start -->
                    <group>
                        <field name="setting_time_visible" readonly="1" invisible="1" />
                        <h1>
                            <field name="setting_time_name" readonly="1" nolabel="1"   attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        </h1>
                    </group>
                    <group>
                        <field name="wt_of_cement_setting_time" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="wt_of_water_required_setting_time" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                    </group>
                    <group style="width:50%">
                        <h3>
                            <field name="initial_setting_time" readonly="1" nolabel="1"   attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        </h3>
                   
                        <field name="time_water_added" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="time_needle_fails" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="initial_setting_time_hours" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="initial_setting_time_minutes" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>

                    </group>

                    <group style="width:50%">
                        <h3>
                            <field name="final_setting_time" readonly="1" nolabel="1"   attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        </h3>
                   
                        <field name="time_needle_make_impression" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="final_setting_time_hours" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>
                        <field name="final_setting_time_minutes" attrs="{'invisible': [('setting_time_visible', '=', False)]}"/>

                    </group>

                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>