<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="flexural_strength_concrete_beam_view" model="ir.ui.view">
        <field name="name">mechanical.flexural.strength.concrete.beam.form</field>
        <field name="model">mechanical.flexural.strength.concrete.beam</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id"/>
                        <field name='length'/>
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name='sr_no'/>
                                <field name='depth'/>
                                <field name='width'/>
                                <field name='wt_of_sample'/>
                                <field name='fracture_distance'/>
                                <field name='failure_load'/>
                                <field name='flexural_strength'  attrs="{'invisible': [('sr_no', '=', 3)]}"/>
                                <field name="flexural_strength_3" attrs="{'invisible': [('sr_no', '!=', 3)]}"/>
                            </tree>
                    </field>
                    <group>
                        <field name='average_flexural_strength'/>
                        <field name="are_child_lines_filled" invisible="1"/>
                        <button string="Calculate" name="average_flexural_calculation" type="object" class="oe_highlight" 
                                attrs="{'invisible': [('are_child_lines_filled', '=', False)]}" />
                    </group>
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>