<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_wpt_form" model="ir.ui.view">
        <field name="name">mechanical.wpt.form</field>
        <field name="model">mechanical.wpt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <h1>
                        <field name="name" readonly="1"/>
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="temp_percent_wpt"/>
                            <field name="humidity_percent_wpt"/>
                        </group>

                        <group>
                            <field name="start_date_wpt"/>
                            <field name="end_date_wpt"/>
                        </group>
                    </group>
                    <group>
                        <field name="eln_ref" invisible="1"/>
                    </group>

                    <group>
                        <group>
                            
                            <field name="casting_date"/>
                            <field name="grade"/>
                        </group>

                        <group>
                            <field name="quantity"/>
                            <field name="size"/>
                        </group>
                    </group>
                    <group>
                        <field name="child_lines">
                        <tree editable="bottom">
                            <field name="sample"/>
                            <field name="depth1"/>
                            <field name="depth2"/>
                            <field name="depth3"/>
                            <field name="average"/>
                        </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
        </record>
    </data>
</odoo>