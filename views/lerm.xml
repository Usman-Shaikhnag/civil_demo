<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="lerm_discipline_form" model="ir.ui.view">
        <field name="name">lerm_civil.discipline.form</field>
        <field name="model">lerm_civil.discipline</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="discipline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lerm_discipline_action" model="ir.actions.act_window">
        <field name="name">Discipline</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lerm_civil.discipline</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Discipline</p>
        </field>

    </record>

    <record id="lerm_civil_material_action" model="ir.actions.act_window">
        <field name="name">Material</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lerm.civil.material</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Material</p>
        </field>

    </record>
    
    <menuitem id="lerm_root"
        name="LERM Civil"
        sequence="10" />

    <menuitem id="lerm_menu"
        name="LERM"
        parent="lerm_root"
        sequence="10" />

    <menuitem id="discipline"
        name="Discipline"
        parent="lerm_menu"
        action="lerm_discipline_action"
        sequence="10" />
    
    <menuitem id="lerm_civil_material"
        name="Material"
        parent="lerm_menu"
        action="lerm_civil_material_action"
        sequence="10" />
</odoo>