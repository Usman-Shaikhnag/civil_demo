<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="lerm_civil_material_form" model="ir.ui.view">
        <field name="name">lerm.civil.material.form</field>
        <field name="model">lerm.civil.material</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="group"/>
                            <field name='material'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_method_action_form" model="ir.ui.view">
        <field name="name">lerm.civil.test_method.form</field>
        <field name="model">lerm_civil.test_method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='test_method'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>