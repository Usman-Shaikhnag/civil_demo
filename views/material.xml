<?xml version="1.0" encoding="UTF-8"?>
<odoo>
 <data>
      <record id="product_template_form" model ="ir.ui.view">
          <field name="name">product.template.form</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_form_view" />
          <field name="arch" type="xml">
              <xpath expr="//field[@name='sale_ok']" position="after">
                <label for="is_sample" string="Is Sample"/>
                <field name="is_sample"/>
              </xpath>
              <xpath expr="//page[@name='general_information']" position="after">
                <page name="lerm" string="LERM">
                  <groups>
                    <group style="width:50%">
                      <field name="test_parameter"/>
                      <field name="results"/>
                      <field name="discipline"/>  
                      <field name="method_reference"/>
                      <field name="result_remark"/>
                    </group>
                    <group style="width:50%">
                      <field name="specifications"/>
                      <field name="unit"/>
                      <field name="group"/>
                      <field name="test_format_no"/>
                      <field name="data_sheet_format_no"/>
                    </group>
                  </groups>
                  <field name="parameter_table" nolabel="1" >
                            <tree>
                                <field name="parameter" />
                                <field name="minimum" />
                                <field name="maximum" />
                                <field name="specification1" />  
                                <field name="specification2" />
                                <field name="unit" />  
                                <field name="test_method" />
                            </tree>
                  </field>
                </page>
                <page name="grade_page" string="Grade">
                    <field name="grade_table">
                      <tree editable="bottom">
                        <field name="grade"/>
                      </tree>
                    </field>
                </page>
                <page name="size_page" string="Size">
                    <field name="size_table">
                      <tree editable="bottom">
                        <field name="size"/>
                      </tree>
                    </field>
                </page>
                <page name="qty_page" string="Qty">
                    <field name="qty_table">
                      <tree editable="bottom">
                        <field name="qty"/>
                      </tree>
                    </field>
                </page>
                </xpath>
          </field>
      </record>
    </data>

   
    
</odoo>