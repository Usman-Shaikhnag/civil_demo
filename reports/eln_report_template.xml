										<span t-esc="r['parameter_name']"/>
									</td>
									<td>
										<span t-esc="r['identifier']"/>
									</td>
									<td>
										<span t-esc="r['inputs']"/>
									</td>
									<td>
										<span t-esc="r['value']"/>
									</td>
								</tr>
							</tbody>
						</table>
						<div class="authorizeRowDataSheet">
							<div>
								
								<div>
									<b>
										(JR Chemist)
									</b>
								</div>
								<div>
									<b>
										Tested By
									</b>
								</div>
							</div>
							<div style="margin-left:500px">
								
								<div>
									<b>
										Chemical Department (HOD)
									</b>
								</div>
								<div>
									<b>
										Checked By
									</b>
								</div>
							</div>
						</div>

					<!-- <div style="text-align:center;margin-top:25px">
						......End of Report......
					</div> -->

					
				</div>
			</t>
		</t>
	</template>
</odoo>
