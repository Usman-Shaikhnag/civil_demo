			<t t-call="web.basic_layout">
				<div class="imageContainer" style="padding-bottom:8px">
					<img t-attf-src="/lerm_civil/static/src/img/letterHead.jpg" class="company_logo" alt="Image" />
				</div>
				<div style="text-align:center;margin-top:10px">
					<p style="font-size:15px"><b>Srf Report</b></p>
				</div>
				<div class="container_eln">
					<div t-foreach="srf" t-as="o">
						<table>
							<tr>
								<td colspan="4">Report no :
									<![CDATA[&nbsp;]]>
									<span t-field="o.srf_id"/>
								</td>
								<td colspan="4">Customer :
									<![CDATA[&nbsp;]]>
									<span t-field="o.customer.name"/>
								</td>
								<td colspan="4">Kes No :
									<![CDATA[&nbsp;]]>
									<span t-field="o.kes_number"/>
								</td>
							</tr>
							<tr>
								<td colspan="4">Billing Customer :
									<![CDATA[&nbsp;]]>
									<span t-field="o.billing_customer.name"/>
								</td>
								<td colspan="4">Srf Date :
									<![CDATA[&nbsp;]]>
									<span t-field="o.srf_date"/>
								</td>
								<td colspan="4">Name of work :
									<![CDATA[&nbsp;]]>
									<span t-field="o.name_work.project_name"/>
								</td>
							</tr>
							<tr>
								<td colspan="4">Contact Person :
									<![CDATA[&nbsp;]]>
									<span t-field="o.contact_person.name"/>
								</td>
								<td colspan="8">Site Address :
									<![CDATA[&nbsp;]]>
									<span t-field="o.site_address.name"/>
									<span t-field="o.site_address.street"/>
									<span t-field="o.site_address.street2"/>
									<span t-field="o.site_address.city"/>
									<span t-if="o.site_address.zip" t-field="o.site_address.zip"/>
									<span t-field="o.site_address.state_id"/>
											,
									<span t-field="o.site_address.country_id"/>
								</td>
							</tr>
							<tr>
								<td colspan="12">Client Refrence Letter :
									<![CDATA[&nbsp;]]>
									<span t-field="o.client_refrence"/>
								</td>
							</tr>
						</table>
					</div>
					<table style="margin-top:30px;">
						<thead>
							<tr>
								<th>
									<span>
										Kes No
									</span>
								</th>
								
								<th>
									<span>
										Material
									</span>
								</th>
								<th>
									<span>
										Discipline
									</span>
								</th>
								<th>
									<span>
										Group
									</span>
								</th>
								<th>
									<span>
										Parameter
									</span>
								</th>
								<th>
									<span>
										Casting
									</span>
								</th>
								<th>
									<span>
										Sample Received date
									</span>
								</th>
								<th>
									<span>
										Sample Description
									</span>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="srf.samples" t-as="r">
								<td>
									<span t-esc="r.kes_no"/>
								</td>
								
								<td>
									<span t-esc="r['material_id']"/>
								</td>
								<td>
									<span t-esc="r['discipline_id']"/>
								</td>
								<td>
									<span t-esc="r['group_id']"/>
								</td>
								<td>
									<span t-esc="r['parameters']"/>
								</td>
								<td>
									<span t-esc="r['casting']"/>
								</td>
								<td>
									<span t-esc="r['sample_received_date']"/>
								</td>
								<td>
									<span t-esc="r['sample_description']"/>
								</td>
							</tr>
						</tbody>
					</table>

					<table style="margin-top:30px;">
						<thead>
							<tr>
								<th>
									<span>
										Kes Range
									</span>
								</th>
								
								<th>
									<span>
										Material
									</span>
								</th>
								<th>
									<span>
										Discipline
									</span>
								</th>
								<th>
									<span>
										Group
									</span>
								</th>
								<th>
									<span>
										Parameter
									</span>
								</th>
								<th>
									<span>
										Casting
									</span>
								</th>
								<th>
									<span>
										Sample Received date
									</span>
								</th>
								<th>
									<span>
										Sample Description
									</span>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="srf.sample_range_table" t-as="r">
								<td>
									<span t-esc="r.kes_range"/>
								</td>
								
								<td>
									<span t-esc="r['material_id']"/>
								</td>
								<td>
									<span t-esc="r['discipline_id']"/>
								</td>
								<td>
									<span t-esc="r['group_id']"/>
								</td>
								<td>
									<span t-esc="r['parameters']"/>
								</td>
								<td>
									<span t-esc="r['casting']"/>
								</td>
								<td>
									<span t-esc="r['sample_received_date']"/>
								</td>
								<td>
									<span t-esc="r['sample_description']"/>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</t>
		</t>
	</template>
</odoo>
