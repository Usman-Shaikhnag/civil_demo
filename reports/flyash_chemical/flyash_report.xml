<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="flyash_chemical_report">
		<t t-call="web.html_container">
			<!-- <t t-call="web.basic_layout"> -->
			 <t t-call="lerm_civil.custom_layout_header_footer_lerm_eln">
				<div style="text-align:center;margin-top:10px">
					<p style="font-size:15px"><b>Test Report</b></p>
				</div>
				<div class="container_eln">
					<div t-foreach="eln" t-as="o">
						<table>
							<tr>
								<td colspan="3">Report no :
								</td>
								<td colspan="3">
									<span t-field="o.eln_id"/>
								</td>
								<td colspan="3">Report Date :
								</td>
								<td colspan="3">
									<span t-field="o.srf_date"/>
								</td>
								<td colspan="3">ULR NO :
								</td>
								<td colspan="3">
									<span t-field="o.sample_id.ulr_no"/>
								</td>
							</tr>
						</table>
						<table style="margin-top:10px;">
							<tr>
								<td colspan="12">Customer Party Name :
									<![CDATA[&nbsp;]]>
									<span t-field="o.srf_id.customer.name"/>
									<span t-field="o.srf_id.customer.street"/>
									<span t-field="o.srf_id.customer.street2"/>
									<span t-field="o.srf_id.customer.city"/>
									<span t-if="o.srf_id.customer.zip" t-field="o.srf_id.customer.zip"/>
									<span t-field="o.srf_id.customer.state_id"/>
											,
									<span t-field="o.srf_id.customer.country_id"/>
								</td>
							</tr>
							<tr>
								<td colspan="12">Project / Site Address :
									<![CDATA[&nbsp;]]>
									<span t-field="o.srf_id.site_address.name"/>
									<span t-field="o.srf_id.site_address.street"/>
									<span t-field="o.srf_id.site_address.street2"/>
									<span t-field="o.srf_id.site_address.city"/>
									<span t-if="o.srf_id.site_address.zip" t-field="o.srf_id.site_address.zip"/>
									<span t-field="o.srf_id.site_address.state_id"/>
											,
									<span t-field="o.srf_id.site_address.country_id"/>
								</td>
							</tr>
							<tr>
								<td colspan="12">Sample Description : <![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.sample_description"/>
								</td>
							</tr>
						</table>
						<table>
							<tr>
								<td colspan="6">Test Start Date :<![CDATA[&nbsp;]]>
									<span t-field="o.start_date"/>
								</td>
								<td colspan="6">Test End Date :<![CDATA[&nbsp;]]>
									<span t-field="o.end_date"/>
								</td>
							</tr>
							<tr>
								<td colspan="6">Sample Id Mark: <![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.client_sample_id"/>
								</td>
								<td colspan="6">Sample Receipt Date :<![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.sample_received_date"/>
								</td>
							</tr>
							<tr>
								<td colspan="6">Size :
									<![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.size_id.size"/>
								</td>
								<td colspan="6">Grade :
									<![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.grade_id.grade"/>
								</td>
							</tr>
							<tr>
								<td colspan="6">Brand :
									<![CDATA[&nbsp;]]>
									<span t-field="o.sample_id.brand"/>
								</td>
								<td colspan="6">Consultant Name :
									<![CDATA[&nbsp;]]>
								</td>
							</tr>
							<tr>
								<td colspan="6">Client Name :
									<![CDATA[&nbsp;]]>
								</td>
								<td colspan="6">Client Reference :
									<![CDATA[&nbsp;]]>
									<span t-field="o.srf_id.client_refrence"/>
								</td>
							</tr>
							<tr>
								<td colspan="6">Discipline :
									<![CDATA[&nbsp;]]>
									<span t-field="o.discipline.discipline"/>
								</td>
								<td colspan="6">Group :
									<![CDATA[&nbsp;]]>
									<span t-field="o.group.group"/>
								</td>
							</tr>

							<tr>
								<td colspan="12">Material/Test Name :
									<![CDATA[&nbsp;]]>
									<span t-field="o.material.name"/>
								</td>
							</tr>
						</table>
					</div>
					<div style="margin-top:20px;">
						<u>Results</u>
					</div>
					<table>
						<thead>
							<!-- <tr>
								<th>
									<span>
										Sr. No
									</span>
								</th>
								<th>
									<span>
										Test Parameters
									</span>
								</th>
								
								<th>
									<span>
										Results
									</span>
								</th> -->

								<!-- <th>
									<span>
										Units
									</span>
								</th>
								<th style="max-width: 250px;">
									<span>
										Specification

										Specification as per IS 15456:2000(RA 2016)
										<span t-esc="eln.material.specifications"/>
									</span>
								</th>
								<th style="max-width: 200px;">
									<span>
										<span t-esc="eln.material.method_reference"/>
										<span t-esc="r['parameter'].parameter_name"/>
										<span t-esc="r['parameter'].parameter_name"/>

									</span>
								</th> -->
								<!-- <th>
									<span>
										NABL Status
									</span>
								</th> -->
								<!-- <th t-if="eln.conformity">
									<span>
										Confirmity Status
									</span>
								</th>
							</tr> -->

                            <tr cols="12">
								<td colspan="1" style="border-top:none;border-bottom:none;text-align: center;">Sr no 
								</td>
								<td colspan="2" style="border-top:none;border-bottom:none;text-align: center;">Test Parameter 
								</td>
								<td colspan="1" style="border-bottom:none;text-align: center;">Results
								</td>
								
                                <td colspan="3" style="text-align: center;">Test Method
								</td>	
							</tr>
                            <tr cols="12">
								<td colspan="1" style="border-top:none">
								</td>
								<td colspan="2" style="border-top:none">
								</td>
								<td colspan="1" style="border-top:none">
								</td>
                                <td colspan="1" style="text-align: center;">Siliceous pulverized fuel Ash
								</td>
                                <td colspan="2" style="text-align: center;">Calcareous pulverized fuel Ash 
								</td>	
							</tr>
						</thead>
						<tbody>
							<t t-set="i" t-value="0"/>
							<!-- non nabl -->
							<tr t-foreach="eln.parameters_result" t-as="r" t-if="r['nabl_status'] == 'non-nabl' and not nabl and '(depend)' not in r['parameter'].parameter_name">
								<td style="text-align: center;">
									<div>
										<span t-esc="i + 1"/>
										<t t-set="i" t-value="i+1"/>
									</div>
                  				</td>
								<td colspan="2" style="text-align: center;">
									<span t-esc="r['parameter'].parameter_name"/>
								</td>
								<td colspan="1" style="text-align: center;">
									<!-- <span t-esc="round(r['result'], r['parameter'].decimal)"/> -->
									 <span t-esc="'{:.{}f}'.format(r['result'], r['parameter'].decimal)"/>
								</td>
								<!-- <td>
									<span t-esc="r['unit'].name"/>
								</td> -->
								<!-- <td style="max-width: 250px;">
									<span t-esc="r['specification_permissible_limit']"/>
								</td> -->
								<td colspan="1" style="max-width: 250px;text-align: center">
									<span t-esc="r['test_method'].test_method"/>
								</td>

								<td colspan="2" style="max-width: 250px;text-align: center">
									<span t-esc="r['test_method'].test_method"/>
								</td>
								<!-- <td>
									<span t-esc="r['nabl_status']"/>
								</td> -->
								<td t-if="eln.conformity">
									<span t-esc="r['conformity_status']"/>
								</td>
							</tr>

							<!-- nabl -->
							<tr t-foreach="eln.parameters_result" t-as="r" t-if="r['nabl_status'] == 'nabl' and nabl and '(depend)' not in r['parameter'].parameter_name" >
								<td style="text-align: center;">
									<div>
										<span t-esc="i + 1"/>
										<t t-set="i" t-value="i+1"/>
									</div>
                  				</td>
								<td colspan="2" style="text-align: center;">
									<span t-esc="r['parameter'].parameter_name"/>
								</td>
								<td colspan="1" style="text-align: center;">
									<!-- <span t-esc="round(r['result'], r['parameter'].decimal)"/> -->
									 <span t-esc="'{:.{}f}'.format(r['result'], r['parameter'].decimal)"/>
								</td>
								<!-- <td>
									<span t-esc="r['unit'].name"/>
								</td> -->
								<!-- <td style="max-width: 250px;">
									<span t-esc="r['specification_permissible_limit']"/>
								</td> -->
								<td colspan="1" style="max-width: 250px; text-align: center">
									<span t-esc="r['test_method'].test_method"/>
								</td>

								<td colspan="2" style="max-width: 250px; text-align: center">
									<span t-esc="r['test_method'].test_method"/>
								</td>
								<!-- <td>
									<span t-esc="r['nabl_status']"/>
								</td> -->
								<td t-if="eln.conformity">
									<span t-esc="r['conformity_status']"/>
								</td>
							</tr>
						</tbody>
					</table>
					<div style="page-break-inside: avoid;">
						<div style="margin-top:20px" class="noteContainer">
							<div>
								<b>Note :-</b>
							</div>
							<div>
								<ul>
									<li>
										The Test Report(s) is/are valid only to the sample submitted to the laboratory.
									</li>
									<li>
										Sample(s) was/were not drawn by laboratory.
									</li>
									<li>
										This Report may not be reproduced in except full/ part without the permission of the Lab Head of the Laboratory.
									</li>
									<li t-if="eln.remarks">
										<span t-esc="eln.remarks"/>
									</li>
								</ul>
							</div>
						</div>
						<div class="signatureContainer girdgird">
							<div>
								<div>
									<b>
										Checked By
									</b>
								</div>
								<div style="height:20px">

								</div>
								<div>
									<b>
										Chemical Department (HOD)
									</b>
								</div>
								<div>
									<b>
										(Authorized Signatory)
									</b>
								</div>
							</div>
							<div>
								<div t-if="stamp and stamp == '4-in_report'">
									<img t-attf-src="/lerm_civil/static/src/img/stamp.png" alt="Image"/>
								</div>
								<div style="padding-top:5px">
									Format No. <span t-esc="eln.material.test_format_no"/>
								</div>
							</div>
							<div>
								<div>
									<b>
										Approved By
									</b>
								</div>
								<div style="height:20px">

								</div>
								<div>
									<b>
										Chemical Department (HOD)
									</b>
								</div>
								<div>
									<b>
										(Authorized Signatory)
									</b>
								</div>
							</div>
						</div>
						<div style="text-align:center;margin-top:25px">
							......End of Report......
						</div>
					</div>
				</div>
			</t>
		</t>
	</template>
</odoo>
